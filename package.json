{
  "name": "@deriv-com/ui",
  "private": false,
  "version": "1.7.0",
  "type": "module",
  "main": "dist/main.js",
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/deriv-com/ui"
  },
  "scripts": {
